# /etc/inittab
#
# Copyright (C) 2001 Erik Andersen <andersen@codepoet.org>
#
# Note: BusyBox init doesn't support runlevels.  The runlevels field is
# completely ignored by BusyBox init. If you want runlevels, use
# sysvinit.
#
# Format for each entry: <id>:<runlevels>:<action>:<process>
#
# id        == tty to run on, or empty for /dev/console
# runlevels == ignored
# action    == one of sysinit, respawn, askfirst, wait, and once
# process   == program to run

# Startup the system
null::sysinit:/bin/mount -t proc proc /proc
null::sysinit:/bin/mount -o remount,rw /
null::sysinit:/bin/mkdir -p /dev/pts
null::sysinit:/bin/mkdir -p /dev/shm
null::sysinit:/bin/mount -a
null::sysinit:/bin/hostname -F /etc/hostname
# now run any rc scripts
::sysinit:/etc/init.d/rcS

# Put a getty on the serial port
ttySAC0::respawn:/sbin/getty -L /dev/ttySAC0 115200 vt100
tty1::respawn:/sbin/getty -L /dev/tty1 0 linux
tty2::respawn:/sbin/getty -L /dev/tty2 0 linux
tty3::respawn:/sbin/getty -L /dev/tty3 0 linux
tty4::respawn:/sbin/getty -L /dev/tty4 0 linux
tty5::respawn:/sbin/getty -L /dev/tty5 0 linux
tty6::respawn:/sbin/getty -L /dev/tty6 0 linux

# Stuff to do for the 3-finger salute
::ctrlaltdel:/sbin/reboot

# Stuff to do before rebooting
::shutdown:/etc/init.d/rcK
::shutdown:/sbin/swapoff -a
::shutdown:/bin/umount -a -r
